---
apiVersion: kubeadm.k8s.io/v1beta2
kind: InitConfiguration
bootstrapTokens:
- token: {{ kube_join_token }}
  description: Cluster join token
  ttl: 0h
nodeRegistration:
  criSocket: /var/run/dockershim.sock
  taints:
  - key: node-role.kubernetes.io/master
    effect: NoSchedule
localAPIEndpoint:
  bindPort: {{ kube_local_apiserver_bind_port }}
  advertiseAddress: {{ kube_local_apiserver_bind_address }}
---
apiVersion: kubeadm.k8s.io/v1beta2
kind: ClusterConfiguration
clusterName: kubernetes
imageRepository: k8s.gcr.io
certificatesDir: {{ kube_config_pki_directory }}
controlPlaneEndpoint: {{ kube_control_plane_endpoint }}
apiServer:
  timeoutForControlPlane: 4m0s
  extraArgs:
    authorization-mode: Node,RBAC
networking:
  dnsDomain: cluster.local
  podSubnet: {{ kube_pod_network_cidr }}
  serviceSubnet: {{ kube_svc_network_cidr }}
dns:
  type: CoreDNS
etcd:
  local:
    dataDir: /var/lib/etcd
controllerManager: {}
scheduler: {}
---
apiVersion: kubeproxy.config.k8s.io/v1alpha1
kind: KubeProxyConfiguration
mode: ipvs
---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
CgroupDriver: systemd
